{% extends 'base.html.twig' %}

{% block title %}Changer mon mot de passe{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <section class="container">
        <div>
            <h3 class="font-semibold text-2xl text-gray-800 text-center my-10">Changer mon mot de passe</h3>
            {{ form_start(changePasswordForm) }}

            <label class="form-control w-full max-w-xs">
                <div class="label">
                    <span class="label-text">Mot de passe</span>
                </div>
                <input name="{{ field_name(changePasswordForm.password.first) }}"
                       value="{{ field_value(changePasswordForm.password.first) }}"
                       type="password"
                       placeholder="{{ field_label(changePasswordForm.password.first) }}"
                       class="input input-bordered w-full max-w-xs"/>
                {{ form_errors(changePasswordForm.password.first) }}
            </label>
            <label class="form-control w-full max-w-xs">
                <div class="label">
                    <span class="label-text">Confirmation du mot de passe</span>
                </div>
                <input name="{{ field_name(changePasswordForm.password.second) }}"
                       value="{{ field_value(changePasswordForm.password.second) }}"
                       type="password"
                       placeholder="{{ field_label(changePasswordForm.password.second) }}"
                       class="input input-bordered w-full max-w-xs"/>
            </label>

            <div class="flex justify-center">
                <button type="submit" class="btn btn-primary my-2">Enregistrer</button>
            </div>
            {{ form_end(changePasswordForm) }}
        </div>
    </section>
{% endblock %}