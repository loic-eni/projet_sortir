{% extends 'base.html.twig' %}

{% block title %}Modifier mon compte{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <section class="container">
        <div>
            <h3 class="font-semibold text-2xl text-gray-800 text-center my-10">Modifier mon compte</h3>
            {{ form_start(editAccountForm) }}

            <label class="form-control w-full max-w-xs">
                <div class="label">
                    <span class="label-text">Prénom</span>
                </div>
                <input name="{{ field_name(editAccountForm.firstname) }}"
                       value="{{ field_value(editAccountForm.firstname) }}"
                       type="text"
                       placeholder="{{ field_label(editAccountForm.firstname) }}"
                       class="input input-bordered w-full max-w-xs"/>
            </label>
            <label class="form-control w-full max-w-xs">
                <div class="label">
                    <span class="label-text">Nom</span>
                </div>
                <input name="{{ field_name(editAccountForm.lastname) }}"
                       value="{{ field_value(editAccountForm.lastname) }}"
                       type="text"
                       placeholder="{{ field_label(editAccountForm.lastname) }}"
                       class="input input-bordered w-full max-w-xs"/>
            </label>
            <label class="form-control w-full max-w-xs">
                <div class="label">
                    <span class="label-text">Email</span>
                </div>
                <input name="{{ field_name(editAccountForm.email) }}"
                       value="{{ field_value(editAccountForm.email) }}"
                       type="text"
                       placeholder="{{ field_label(editAccountForm.email) }}"
                       class="input input-bordered w-full max-w-xs"/>
            </label>
            <label class="form-control w-full max-w-xs">
                <div class="label">
                    <span class="label-text">Téléphone</span>
                </div>
                <input name="{{ field_name(editAccountForm.phone) }}"
                       value="{{ field_value(editAccountForm.phone) }}"
                       type="text"
                       placeholder="{{ field_label(editAccountForm.phone) }}"
                       class="input input-bordered w-full max-w-xs"/>
            </label>
            <div class="flex justify-center">
                <button type="submit" class="btn btn-primary my-2">Enregistrer</button>
            </div>
            {{ form_end(editAccountForm) }}
            <div class="divider"></div>

            <div class="flex justify-center">
                <a href="{{ path('app_changePassword') }}" class="btn btn-primary my-2">Changer mon mot de passe</a>
            </div>
        </div>
    </section>
{% endblock %}
