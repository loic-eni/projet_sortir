{% extends 'base.html.twig' %}
{% block title %}

{% endblock %}

{% block body %}
    <div class="container">
            <div>
                <div>
                    <h3 class="text-2xl font-bold text-center my-3">{{ user.firstname }} {{ user.lastname }}</h3>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <strong>Téléphone :</strong>
                        {{ user.phone }}
                    </p>
                    <p class="card-text">
                        <strong>Email :</strong>
                        {{ user.email }}
                    </p>
                    <h4 class="text-l font-bold">Campus</h4>
                    {% if user.campus != null %}
                        <p>Nom du campus : {{ user.campus.name }}</p>
                        {% else %}
                        <p class="italic">Aucun campus</p>
                    {% endif %}
                </div>

                {% if is_granted('ROLE_ADMIN') %}
                    {% if user.active %}
                        <a href="{{ path('app_deactivate_profile', {id: user.id}) }}" class="btn btn-md btn-error">Désactiver le compte</a>
                        {% else %}
                        <a href="{{ path('app_reactivate_profile', {id: user.id}) }}" class="btn btn-md btn-success">Réactiver le compte</a>
                    {% endif %}
                {% endif %}
            </div>
    </div>
{% endblock %}


