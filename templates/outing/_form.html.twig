{% extends 'base.html.twig' %}

{% block title %}Préparer une sortie{% endblock %}

{% block body %}
    <section class="container px-4 py-6">
        {{ form_start(outingForm, {'attr': {'novalidate': 'novalidate'}}) }}
        <h3 class="font-semibold text-2xl text-gray-800 text-center my-10">Préparer une sortie</h3>

        <div class="flex flex-col lg:flex-row lg:justify-between w-full gap-6">
            <!-- Left side (form inputs) -->
            <div class="flex flex-col gap-6 w-full lg:w-1/2">
                <label class="form-control w-full">
                    <div class="label">
                        <span class="label-text">Nom de la sortie</span>
                    </div>
                    <input name="{{ field_name(outingForm.name) }}"
                           value="{{ field_value(outingForm.name) }}"
                           type="text"
                           placeholder="{{ field_label(outingForm.name) }}"
                           class="input input-bordered w-full"/>
                    {{ form_errors(outingForm.name) }}
                </label>

                <label class="form-control w-full">
                    <div class="label">
                        <span class="label-text">Info. sur la sortie</span>
                    </div>
                    <textarea name="{{ field_name(outingForm.outingInfo) }}"
                              placeholder="{{ field_label(outingForm.outingInfo) }}"
                              class="textarea textarea-bordered h-24">{{ field_value(outingForm.outingInfo) }}</textarea>
                </label>

                <div class="flex items-end gap-6">
                    <label class="form-control w-full">
                        <div class="label">
                            <span class="label-text">Lieu</span>
                        </div>
                        {{ form_widget(outingForm.location, { 'attr': { 'class': 'select select-bordered w-full' } }) }}
                        {{ form_errors(outingForm.location) }}
                    </label>
                    <button type="button" class="btn btn-primary">
                        <a class="text-xs" href="{{ path('location_create') }}">
                            <i class="fas fa-plus"></i> Ajouter un lieu
                        </a>
                    </button>
                </div>

                <label class="form-control w-full">
                    <div class="label">
                        <span class="label-text">Campus</span>
                    </div>
                    {{ form_widget(outingForm.campus, { 'attr': { 'class': 'select select-bordered w-full' } }) }}
                    {{ form_errors(outingForm.campus) }}
                </label>
            </div>

            <div class="divider lg:divider-vertical"></div>

            <!-- Right side (form inputs) -->
            <div class="flex flex-col gap-6 w-full lg:w-1/2">
                <label class="form-control w-full">
                    <div class="label">
                        <span class="label-text">Date de début</span>
                    </div>
                    <input name="{{ field_name(outingForm.startDate) }}"
                           value="{{ field_value(outingForm.startDate) }}"
                           type="datetime-local"
                           class="input input-bordered w-full"
                           required="required"/>
                    {{ form_errors(outingForm.startDate) }}
                </label>

                <label class="form-control w-full">
                    <div class="label">
                        <span class="label-text">Date max. d'inscription</span>
                    </div>
                    <input name="{{ field_name(outingForm.registrationMaxDate) }}"
                           value="{{ field_value(outingForm.registrationMaxDate) }}"
                           type="datetime-local"
                           class="input input-bordered w-full"
                           required="required"/>
                    {{ form_errors(outingForm.registrationMaxDate) }}
                </label>

                <label class="form-control w-full">
                    <div class="label">
                        <span class="label-text">Durée en min.</span>
                    </div>
                    <input name="{{ field_name(outingForm.duration) }}"
                           value="{{ field_value(outingForm.duration) }}"
                           type="number"
                           min="0"
                           class="input input-bordered w-full"/>
                    {{ form_errors(outingForm.duration) }}
                </label>

                <label class="form-control w-full">
                    <div class="label">
                        <span class="label-text">Nb. max d'inscription</span>
                    </div>
                    <input name="{{ field_name(outingForm.maxInscriptions) }}"
                           value="{{ field_value(outingForm.maxInscriptions) }}"
                           type="number"
                           min="0"
                           class="input input-bordered w-full"/>
                    {{ form_errors(outingForm.maxInscriptions) }}
                </label>

                <button type="submit" class="btn btn-primary my-2">{{ button_label|default('Créer une sortie') }}</button>
            </div>
        </div>

        {{ form_end(outingForm) }}
    </section>
{% endblock %}
